{% extends 'base.html.twig' %}

{% block title %}Edition Utilisateur
{% endblock %}

{% block header_title %}
	<div class="container">
		<div class="d-flex justify-content-center">
			<h1>Edition de l'utilisateur</h1>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex flex-row justify-content-center">
			{{ include('user/_formEdit.html.twig', {'button_label': 'Mettre à jour'}) }}
		</div>
	</div>

<div class="container">
	<div class="d-flex flex-row justify-content-xl-around">
		<div class="">
			<a href="{{ path('user_index') }}">Retour à l'index Utilisateur</a>
		</div>
		{% if is_granted('delete_user',app.user) %}
		<div class="bg-warning">
			{{ include('user/_delete_form.html.twig') }}
		</div>
		{% endif %}
	</div>
</div>

{% endblock %}

