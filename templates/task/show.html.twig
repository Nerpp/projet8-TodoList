{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block header_title %}
	<div class="container">
		<div class="d-flex justify-content-center">
			<h1>Visualiser la Tache</h1>
		</div>
	</div>
{% endblock %}

{% block body %}
<div class="container">
	<div class="d-flex justify-content-center">
		<h1>{{ task.title }}</h1>
	</div>
	<div class="">
		Auteur :
		{{ task.user.username }}
	</div>
	<div class="">
		Crée le :
		{{ task.createdAt ? task.createdAt|date('d-m-Y H:i') : '' }}
	</div>
	<div class="">
		{% if task.isDone %}
			<div class="text-success">
				<strong>Complété :
				</strong>Oui
			</div>
		{% else %}
			<div class="text-danger">
				<strong>Complété :
				</strong>Non
			</div>
		{% endif %}
	</div>
	<div class="d-flex justify-content-center p-4">
		{{ task.content }}
	</div>
    {% if (app.user == task.user) or (is_granted('ROLE_ADMIN') and task.user.username == 'Anonyme')  %}
    <div class="d-flex justify-content-around">
    <div class="">
       <a href="{{ path('task_edit', {'id': task.id}) }}">éditer</a>
    </div>
    <div class="d-flex justify-content-center bg-warning text-dark col-1">
        {{ include('task/_delete_form.html.twig') }}
    </div>
    <div class="">
	{% if task.isDone %}
        <a href="{{ path('task_ended') }}">retour index</a>
		{% else %}
		<a href="{{ path('task_todo') }}">retour index</a>
	{% endif %}
    </div>
    </div>
    {% endif %}
</div>
 
{% endblock %}
