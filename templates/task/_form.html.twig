<div class="container">
	<div class="d-flex justify-content-center">
		{{ form_start(form) }}
		<div class="pt-4">
			{{ form_label(form.title) }}
		</div>
		<div class="">
			{{ form_errors(form.title)}}
		</div>
		<div class="">
			{{ form_widget(form.title, {'attr': {'class': 'border_input'}}) }}
		</div>
    </div>
    <div class="pt-1">
        <div class="">
		  {{ form_label(form.content) }}
		</div>
		<div class="">
		{{ form_errors(form.content)}}
		</div>
		<div class="text-justify">
		  {{ form_widget(form.content, {'attr': {'class': 'content_input'}}) }}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <div class="mr-1">
		  {{ form_label(form.isDone) }}
		</div>
		<div class="">
		  {{ form_widget(form.isDone, {'attr': {'class': 'form-check-input'}}) }}
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn bg-success">{{ button_label|default('Save') }}</button>
    </div>
    {{ form_end(form) }}	
	</div>
</div>
