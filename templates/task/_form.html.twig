{{ form_start(form) }}
<div class="container">
	<div class="d-grid gap-2">
		<div class="">
			{{ form_label(form.title,'Titre') }}
		</div>
		<div class="">
			{{ form_errors(form.title)}}
		</div>
		<div class="">
			{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="">
			{{ form_label(form.content,'Contenu') }}
		</div>
		<div class="">
			{{ form_errors(form.content)}}
		</div>
		<div class="text-justify">
			{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="d-flex justify-content-end">
			<div class="mr-1">
				{{ form_label(form.isDone,'Tâche éffectué') }}
			</div>
			<div class="">
				{{ form_widget(form.isDone, {'attr': {'class': 'form-check-input'}}) }}
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<button class="btn bg-success">{{ button_label|default('Enregistrer') }}</button>
			<input type="hidden" name="_token" value="{{ csrf_token('task_entity') }}">
		</div>
	</div>
</div>
{{ form_end(form) }}
