{% extends 'base.html.twig' %}


{% block title %}Edit Task
{% endblock %}

{% block header_title %}
	<div class="container">
		<div class="d-flex justify-content-center">
			<h1>Edition de Tache</h1>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="">
			{{ include('task/_form.html.twig', {'button_label': 'Update'}) }}
		</div>
		<div class="container">
			<div class="d-flex justify-content-around">
				<div class="">
					{% if task.isDone %}
						<a href="{{ path('task_ended') }}">retour index</a>
					{% else %}
						<a href="{{ path('task_todo') }}">retour index</a>
					{% endif %}
				</div>
				<div class="bg-warning">
					{{ include('task/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

