{% extends 'base.html.twig' %}


{% block title %}Edit Task
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-center">
			<h1>Edit Task</h1>
		</div>
	</div>

	<div class="">
		{{ include('task/_form.html.twig', {'button_label': 'Update'}) }}
	</div>
	<div class="container">
		<div class="d-flex justify-content-around">
			<div class="">
				{% if task.isDone %}
					<a href="{{ path('task_ended') }}">back to list</a>
				{% else %}
					<a href="{{ path('task_todo') }}">back to list</a>
				{% endif %}
			</div>
			<div class="bg-warning">
				{{ include('task/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

{% endblock %}

